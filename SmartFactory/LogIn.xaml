        <TextBox Height="23px" Width="200px" BorderBrush="Black" Canvas.Left="66px" Canvas.Top="42"/>
        <Button Content="登录" Width="80px" Height="23px" Canvas.Left="66" Canvas.Top="77"/>
        <Button Content="退出" Width="80px" Height="23px" Canvas.Left="186" Canvas.Top="77" Click="Close_clickHandler"/>
